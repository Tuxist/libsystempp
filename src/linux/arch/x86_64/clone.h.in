#include <linux/sched.h>
#include <linux/wait.h>
#include <linux/mman.h>
#include <asm/prctl.h>

#include <syscall.h>
#include <sysbits.h>

#include <sysexception.h>
#include <systhread.h>
#include <sysconsole.h>

#define STACKSIZE  (2048 * 1024)

namespace libsystempp {

    class ThStack {
    private:
        int           _Ptid;
        int           _Ctid;
        unsigned long _Tls;
        char          *_Stack;
        friend class    Thread;
        friend void    _clone(ThStack **curth,void *function(void*), void *arguments);
    };
    
    inline void _clone(ThStack **curth,void *function(void*), void *arguments) {
        SystemException excep;
        ThStack *thsta=new ThStack;
        
        thsta->_Stack = (char*)syscall6(__NR_mmap,0,STACKSIZE, PROT_READ | PROT_WRITE,
                                        MAP_PRIVATE| MAP_ANONYMOUS | MAP_GROWSDOWN, -1, 0);
        
        if ((unsigned long)thsta->_Stack == -1){
            excep[SystemException::Error] << "Can't create thread memory allocation failed!";
            throw excep;
        }

        const unsigned long clone_flags = (CLONE_VM | CLONE_FS | CLONE_FILES | CLONE_SYSVSEM
                                | CLONE_SIGHAND | CLONE_THREAD
                                | CLONE_SETTLS | CLONE_PARENT_SETTID
                                | CLONE_CHILD_CLEARTID | CLONE_PTRACE
                                | 0);
        
        char* stacktop=(char*)thsta->_Stack+STACKSIZE;
        --stacktop=(char*)function;
               
        syscall1(__NR_getpid,(unsigned long)&thsta->_Ptid);
        
        thsta->_Tls=0;
        
        syscall2(__NR_arch_prctl, ARCH_SET_FS,(unsigned long)thsta->_Tls);
        
        int pid = syscall5(__NR_clone,clone_flags,
                           (unsigned long)&stacktop,
                           (unsigned long)&thsta->_Ptid,
                           (unsigned long)&thsta->_Ctid,
                           (unsigned long)&thsta->_Tls
                          );
        
        if(pid < 0){
            SystemException excep;
            excep[SystemException::Error] << "Can't create Thread clone process failed!";
        }
        
        if (pid == 0) {
            function(arguments);
            return;
        }else{
            curth=&thsta;
        }
    }
};
